generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  phoneNumber String    @unique
  password    String  
  role        String    @default("user")
  cart       Cart[]    
  blogs       Blog[]    
}

model Cart {
  id         String     @id @default(uuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  products   Product[]  
  items      Json       // Stores array of {productId: String, quantity: Int}
  path       String
  image      String
  totalPrice Int
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Product {
  id          String    @id @default(uuid())
  title       String
  price       String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  image       String?
  categoryChildren  String
  categoryId  String    
  category    Category  @relation(fields: [categoryId], references: [id])
  carts       Cart[]    
  properties  Json      
  videoes     String[]  
  colors      Json  
  thumbnails  String[]  
}

model Blog {
  id          String    @id @default(uuid())
  title       String
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  image       String?   // Optional image field
  userId      String
  description String
  seoTitle    String
  tags        String[]
  readTime    Int
  user        User      @relation(fields: [userId], references: [id])

  @@index([userId, id], name: "userId_id_idx")
}

model Category {
  id            String     @id @default(uuid())
  title         String 
  children      String[]
  products      Product[]
}




